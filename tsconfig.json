{
    "include": ["declarations.d.ts", "source/**/*.js"],
    "exclude": ["node_modules"],
    "compilerOptions": {
      "allowJs": true,
      "checkJs": true,
      "noEmit": true,
      "module": "esnext",
      "strict": true,
      "skipLibCheck": true,
      "moduleResolution": "bundler",
      "target": "esnext",
      "lib": ["ES2022", "dom", "dom.iterable"],
      "downlevelIteration": true,
      "types": ["node"],
      "noUnusedLocals": true,
      "noUnusedParameters": true
    }
  }
  